@using System.Activities.Statements
@model IEnumerable<Varta_Exercises.Models.Henkilo>
@{ 
    ViewBag.Title = "Varta Exercises";
    int pisteTotal = 0; // Muuttuja johon lisätään jokaisen henkilö-objektin pisteet.
}

<div class="row">
    <h1>Tehtävä 1</h1>
    <div class="col-md-6">
        <h3>Lomake</h3>
        <form>
            <div class="form-group">
                <label>Etunimi</label>
                <input class="form-control" id="etuNimi">
            </div> 
            <div class="form-group">
                <label>Sukunimi</label>
                <input class="form-control" id="sukuNimi">
            </div>   
            <div class="form-group">
                <input type="checkbox" id="valinta1"/>
                <label for="valinta1"> Hyväksyn ehdot</label>
            </div>
            <div class="form-group">
                <label>Valintani</label>
                <select class="form-control" id="alasveto1">
                    <option>Juu</option>
                    <option>Kyllä</option>
                    <option>Ei</option>
                    <option>Ehkä</option>
                </select>
            </div>
            <button type="submit" class="btn btn-default">Lähetä</button>
        </form>
    </div>
    <div class="col-md-6">
        <h3>Taulukko</h3>
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Etunimi</th>
                <th scope="col">Sukunimi</th>
                <th scope="col">Pisteet</th>
            </tr>
            </thead>
            <tbody>
            
            @foreach (var h in Model) // Henkilöt lista puretaan taulukkoon.
            {
                <tr>
                    <th scope="row">@h.ID</th>    
                    <td>@h.ENimi</td>   
                    <td>@h.SNImi</td>
                    <td>@h.Pisteet</td>
                </tr>
                pisteTotal += @h.Pisteet; // Jokaisen henkilön pisteet lisätään pisteTotal-muuttujaan joka kirjoitetaan lopuksi Total-riville.
            }
            
            <tr class="bg-info">
                <th scope="row">Total</th>
                <td></td>
                <td></td>
                <td>@pisteTotal</td>
            </tr>
            
            
            
            </tbody>
            
            
            
            

        </table>
    </div>
</div>